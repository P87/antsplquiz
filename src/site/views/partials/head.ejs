<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="/bootstrap/bootstrap.min.css" rel="stylesheet">

  <title>Ant's Premier League Quiz<%= typeof title != 'undefined' ? ' - ' + title : '' %></title>
<meta name="description" content="Ant's Premier League Quiz">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Ant's Premier League Quiz</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                  <a <% if (section === "home") { %>class="nav-link active" aria-current="page"<% } else { %>class="nav-link"<% } %> href="/">Home</a>
                </li>
                <% if (loggedIn) { %>
                  <li class="nav-item">
                    <a class="nav-link" href="/leaderboard">Leaderboard</a>
                  </li>
                  <% if (locals.isAdmin) { %>
                    <li class="nav-item">
                      <a <% if (section === "admin") { %>class="nav-link active" aria-current="page"<% } else { %>class="nav-link"<% } %> href="/admin">Admin</a>
                    </li> 
                  <% } %>
                <% } else { %>
                  <li class="nav-item">
                    <a <% if (section === "register") { %>class="nav-link active" aria-current="page"<% } else { %>class="nav-link"<% } %> href="/register">Register</a>
                  </li>
                <% } %>
            </ul>
            <% if (loggedIn) { %>
              <ul class="d-flex navbar-nav">
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false" aria-label="Profile Menu">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person-bounding-box" viewBox="0 0 16 16">
                      <path d="M1.5 1a.5.5 0 0 0-.5.5v3a.5.5 0 0 1-1 0v-3A1.5 1.5 0 0 1 1.5 0h3a.5.5 0 0 1 0 1h-3zM11 .5a.5.5 0 0 1 .5-.5h3A1.5 1.5 0 0 1 16 1.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 1-.5-.5zM.5 11a.5.5 0 0 1 .5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 1 0 1h-3A1.5 1.5 0 0 1 0 14.5v-3a.5.5 0 0 1 .5-.5zm15 0a.5.5 0 0 1 .5.5v3a1.5 1.5 0 0 1-1.5 1.5h-3a.5.5 0 0 1 0-1h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 1 .5-.5z"/>
                      <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm8-9a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                    </svg> 
                  </a>
                  <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
                      <li><a class="dropdown-item" id="logout" href="/logout">Logout</a></li>
                      <li><a class="dropdown-item" href="/user/profile">Your Profile</a></li>
                  </ul>
                </li> 
              </ul>
            <% } %>
        </div>
    </div>
  </nav>