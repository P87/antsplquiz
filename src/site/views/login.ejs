<%- include('./partials/head', {loggedIn: false, section: "home" }) %>
    <div class="container">
        <% if (locals.successfulRegistration) { %>
            <div class="row mb-4">
                <div class="col"></div>
                <div class="col-10">
                    <div class="alert alert-success text-center" role="alert">
                        Account created successfully, once Ant confirms your account you will be able to login.
                    </div>
                </div>
                <div class="col"></div>
            </div>
        <% } %>
        <% if (locals.errorMessage) { %>
            <div class="row mb-4">
                <div class="col"></div>
                <div class="col-10">
                    <div class="alert alert-danger text-center" role="alert">
                        <%= errorMessage %>
                    </div>
                </div>
                <div class="col"></div>
            </div>
        <% } %>
        <div class="row">
            <div class="col"></div>
            <div class="col-10">
                <div id="login-form"></div>
                <form action="/" method="post">
                    <div class="mb-3">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="username" name="username" placeholder="Username" value="<%= locals.username ? locals.username : '' %>" />
                            <label for="username" class="form-label">Username</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-floating">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" />
                            <label for="password" class="form-label">Password</label>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
            <div class="col"></div>
        </div>
    </div>
<%- include('./partials/foot') %>